<?xml version="1.0" encoding="utf-8"?>
<com.fffan911.galaxy_defense.View.Layouts.MainMenuLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background"
    android:orientation="vertical"
    android:weightSum="100" >

    <TextView
        android:id="@+id/main_menu_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:gravity="center"
        android:text="@string/main_menu_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="100"
            tools:ignore="UselessParent" >

            <com.fffan911.galaxy_defense.View.Buttons.StoryModeButton
                android:id="@+id/story_mode_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="20"
                android:background="@drawable/blue_button_background"
                tools:ignore="NestedWeights" />

            <com.fffan911.galaxy_defense.View.Buttons.ArcadeModeButton
                android:id="@+id/arcade_mode_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="20"
                android:background="@drawable/purple_button_background" />

            <com.fffan911.galaxy_defense.View.Buttons.VersusModeButton
                android:id="@+id/versus_mode_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="20"
                android:background="@drawable/red_button_background" />

            <com.fffan911.galaxy_defense.View.Buttons.OptionsButton
                android:id="@+id/options_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="20"
                android:background="@drawable/green_button_background" />

            <com.fffan911.galaxy_defense.View.Buttons.ControlsButton
                android:id="@+id/controls_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="20"
                android:background="@drawable/yellow_button_background" />
        
        </LinearLayout>
        
    </LinearLayout>

</com.fffan911.galaxy_defense.View.Layouts.MainMenuLayout>